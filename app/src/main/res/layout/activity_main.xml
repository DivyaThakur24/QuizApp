<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/flower"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbarSize="8dp"
    android:scrollbarThumbVertical="@android:color/darker_gray"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/green"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/spain" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Question 1: Which country's flag is depicted above?"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="A) France\nB) Germany\nC) Spain\nD) Singapore"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/first"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="Option"
                    android:inputType="text"
                    android:textColorHint="#dddddd" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/yellow"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/sound" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Question 2: What is the unit for measuring the amplitude of sound?"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="A) Coulomb\nB) Decibel\nC) Watt\nD) Cycles"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/second"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="Option"
                    android:inputType="text"
                    android:textColorHint="#dddddd" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/red"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/nitrogen" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Question 3: Which micro-organism is responsible for Nitrogen-Fixation?"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="A) Fungi\nB) Bacteria\nC) Algae \nD) Blue alga"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/third"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="Option"
                    android:inputType="text"
                    android:textColorHint="#dddddd" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/blue"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/fathometer" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Question 4: What does Fathometer measure?"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="A) Earthquakes\nB) Rainfall \nC) Ocean Depth\nD) Sound Intensity"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/fourth"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="Option"
                    android:inputType="text"
                    android:textColorHint="#dddddd" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/yellow"
                android:padding="16dp">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="40sp"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"
                    android:text=""/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/purple"
                android:padding="16dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:onClick="finish"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/holo_purple"
                    android:text="FINISH"/>

            </LinearLayout>


    </LinearLayout>

</ScrollView>
